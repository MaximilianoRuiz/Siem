<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" android:drawable="@drawable/credito">
        <shape android:shape="oval"  >
            <size android:height="40dp" android:width="40dp" />
            <solid android:color="#e1b577"/>
        </shape>
    </item>

    <item android:state_focused="true" android:drawable="@drawable/credito">
        <shape android:shape="oval"  >
            <size android:height="40dp" android:width="40dp" />
            <solid android:color="@color/colorCredito"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:drawable="@drawable/credito">
        <shape android:shape="oval">
            <size android:height="40dp" android:width="40dp" />
            <solid android:color="@color/colorCredito"/>
        </shape>
    </item>

    <item android:state_enabled="false" android:drawable="@drawable/credito">
        <shape android:shape="oval">
            <size android:height="40dp" android:width="40dp" />
            <solid android:color="@color/colorCredito"/>
        </shape>
    </item>

</selector>