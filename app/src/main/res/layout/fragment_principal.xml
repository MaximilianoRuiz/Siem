<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragment.PrincipalFragment"
    tools:showIn="@layout/activity_principal">

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/pbLoad"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Cargando ..."/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llFirstButtons"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:text="E"
                android:textSize="50dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/boton_entrada" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:text="S"
                android:textSize="50dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/boton_salida" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Estacionar     "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Salida     "
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/llSecondButtons"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="50dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/boton_credito" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:text="I"
                android:textSize="50dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/boton_informes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="  Credito"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Informes"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
