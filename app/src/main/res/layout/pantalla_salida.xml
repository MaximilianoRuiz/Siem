<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:fitsSystemWindows="true"
tools:context=".activity.LogginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEntrada"
            android:text="Entrada: 00:00hs"
            android:textSize="12pt"
            android:gravity="center"
            android:layout_marginTop="9dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSalida"
            android:text="Salida: 00:00hs"
            android:textSize="12pt"
            android:gravity="center"
            android:layout_marginBottom="9dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumo en hs:"
            android:textSize="14pt"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvConsumo"
            android:text="03:00 hs"
            android:textSize="14pt"
            android:gravity="center"
            android:layout_marginBottom="9dp"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saldo a Pagar:"
            android:textSize="14pt"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSaldoAPagar"
            android:text="$10.00"
            android:textSize="14pt"
            android:gravity="center"
            android:layout_marginBottom="9dp"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saldo disponible:"
            android:textSize="14pt"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#80AC2D"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSaldo"
            android:text="$102.08"
            android:textSize="14pt"
            android:gravity="center"
            android:layout_marginBottom="9dp"
            android:textColor="#80AC2D"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
